                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <!--<TextBox Grid.Row="1" Grid.Column="4" Style="{StaticResource TextBoxStyle}" GotKeyboardFocus="TextBox_GotKeyboardFocus" Text="{Binding Path=CurrentRoutine.J1Artistry, UpdateSourceTrigger=LostFocus}"></TextBox>-->
