                    <TextBox.Text>
                        <Binding Path="CurrentRoutine.J1Artistry" UpdateSourceTrigger="LostFocus">
                            <Binding.ValidationRules>
                                <validators:MaxValueValidationRule
                                    MaxValue="10"
                                    ErrorMessage="Max is 10!" />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <!--<TextBox Grid.Row="1" Grid.Column="5" Style="{StaticResource TextBoxStyle}" GotKeyboardFocus="TextBox_GotKeyboardFocus" Text="{Binding Path=CurrentRoutine.J1Showmanship, UpdateSourceTrigger=LostFocus}"></TextBox>-->
                <TextBox Grid.Row="2" Grid.Column="5" GotKeyboardFocus="TextBox_GotKeyboardFocus">
                    <TextBox.Text>
                        <Binding Path="CurrentRoutine.J1Showmanship" UpdateSourceTrigger="LostFocus">
                            <Binding.ValidationRules>
                                <validators:MaxValueValidationRule
                                    MaxValue="10"
                                    ErrorMessage="Max is 10!" />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <!--<TextBox Grid.Row="1" Grid.Column="6" Style="{StaticResource TextBoxStyle}" GotKeyboardFocus="TextBox_GotKeyboardFocus" Text="{Binding Path=CurrentRoutine.J1Appearance, UpdateSourceTrigger=LostFocus}"></TextBox>-->
                <TextBox Grid.Row="2" Grid.Column="6" GotKeyboardFocus="TextBox_GotKeyboardFocus">
                    <TextBox.Text>
                        <Binding Path="CurrentRoutine.J1Appearance" UpdateSourceTrigger="LostFocus">
                            <Binding.ValidationRules>
                                <validators:MaxValueValidationRule
                                    MaxValue="5"
                                    ErrorMessage="Max is 5!" />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <!-- Judge 2 -->
                <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource HeaderStyle}" Text="Judge 2" />
                <!--<TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource TextBoxStyle}" GotKeyboardFocus="TextBox_GotKeyboardFocus" Text="{Binding Path=CurrentRoutine.J2Technique, UpdateSourceTrigger=LostFocus}" ></TextBox>-->
