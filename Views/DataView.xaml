<UserControl x:Class="TSD_Comp_Tabulator.Views.DataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:validators="clr-namespace:MyValidators"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Crimson" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0 0 5 0" />
        </Style>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="90" />
        </Style>
        <Style x:Key="DataStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Blue" />
            <Setter Property="Margin" Value="0 0 15 5" />
        </Style>
        <Style x:Key="SmallStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="Margin" Value="0 0 0 3" />
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="8"/>
        </Style>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Width" Value="90" />
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <DockPanel LastChildFill="True">
                            <Border BorderBrush="Red" BorderThickness="3">
                                <AdornedElementPlaceholder />
                            </Border>
                        </DockPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip"

                Value="{Binding RelativeSource={RelativeSource Self}, 
                       Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>


    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1" Grid.Row="0">

            <!-- Header -->
            <TextBlock Padding="3"
                    FontSize="18"
                    HorizontalAlignment="Center" 
                    Text="Trendsetter Dance Competition Tabulator" 
                    VerticalAlignment="Top" />
            <!-- Item Details -->
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition MinWidth="20" Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition MinWidth="20" Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition MinWidth="20" Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition MinWidth="20" Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition MinWidth="20" Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <!-- Row 0 -->
                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource HeaderStyle}" Text="EntryID:"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource DataStyle}" x:Name="CurrentRoutine_EntryID">999</TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="2" Style="{StaticResource HeaderStyle}" Text="Type:"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Style="{StaticResource DataStyle}" x:Name="CurrentRoutine_EntryType">Solo - Independent</TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="4" Style="{StaticResource HeaderStyle}" Text="Category:"/>
                <TextBlock Grid.Row="0" Grid.Column="5" Style="{StaticResource DataStyle}" x:Name="CurrentRoutine_Category">Public/Private School</TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="6" Style="{StaticResource HeaderStyle}" Text="Class:"/>
                <TextBlock Grid.Row="0" Grid.Column="7" Style="{StaticResource DataStyle}" x:Name="CurrentRoutine_Class">High School Medium (26-39)</TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="8" Style="{StaticResource HeaderStyle}" Text="Studio Name:"/>
                <TextBlock Grid.Row="0" Grid.Column="9" Style="{StaticResource DataStyle}" x:Name="CurrentRoutine_StudioName">Public/Private School</TextBlock>
            </Grid>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition MinWidth="20" Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition MinWidth="20" Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <!-- Row 0 -->
                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource HeaderStyle}" Text="Routine Title:" />
                <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource DataStyle}" x:Name="SelectedRoutine_RoutineTitle">Routine Title</TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="2" Style="{StaticResource HeaderStyle}" Text="Participants:" />
                <TextBlock Grid.Row="0" Grid.Column="3" Style="{StaticResource DataStyle}" x:Name="SelectedRoutine_Participants">Participants</TextBlock>
            </Grid>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition MinWidth="20" Width="auto" />
                    <ColumnDefinition MinWidth="20" Width="auto" />
                    <ColumnDefinition MinWidth="20" Width="auto" />
                    <ColumnDefinition MinWidth="20" Width="auto" />
                    <ColumnDefinition MinWidth="20" Width="auto" />
                    <ColumnDefinition MinWidth="20" Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>
                <!-- Headers -->
                <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource HeaderStyle}" Text="Technique" />
                <TextBlock Grid.Row="0" Grid.Column="2" Style="{StaticResource HeaderStyle}" Text="Choreography" />
                <TextBlock Grid.Row="0" Grid.Column="3" Style="{StaticResource HeaderStyle}" Text="Execution" />
                <TextBlock Grid.Row="0" Grid.Column="4" Style="{StaticResource HeaderStyle}" Text="Artistry" />
                <TextBlock Grid.Row="0" Grid.Column="5" Style="{StaticResource HeaderStyle}" Text="Showmanship" />
                <TextBlock Grid.Row="0" Grid.Column="6" Style="{StaticResource HeaderStyle}" Text="Appearance" />
                <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource SmallStyle}" Text="Max 25" />
                <TextBlock Grid.Row="1" Grid.Column="2" Style="{StaticResource SmallStyle}" Text="Max 25" />
                <TextBlock Grid.Row="1" Grid.Column="3" Style="{StaticResource SmallStyle}" Text="Max 25" />
                <TextBlock Grid.Row="1" Grid.Column="4" Style="{StaticResource SmallStyle}" Text="Max 10" />
                <TextBlock Grid.Row="1" Grid.Column="5" Style="{StaticResource SmallStyle}" Text="Max 10" />
                <TextBlock Grid.Row="1" Grid.Column="6" Style="{StaticResource SmallStyle}" Text="Max 5" />
                <!-- Judge 1 -->
                <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource HeaderStyle}" Text="Judge 1" />
                <!--<TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource TextBoxStyle}" GotKeyboardFocus="TextBox_GotKeyboardFocus" Text="{Binding Path=SelectedRoutine.J1Technique, UpdateSourceTrigger=LostFocus}" ></TextBox>-->
                <TextBox Grid.Row="2" Grid.Column="1" GotKeyboardFocus="TextBox_GotKeyboardFocus" >
                    <TextBox.Text>
                        <Binding Path="CurrentRoutine.J1Technique" UpdateSourceTrigger="LostFocus">
                            <Binding.ValidationRules>
                                <validators:MaxValueValidationRule
                                    MaxValue="25"
                                    ErrorMessage="Max is 25!" />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <!--<TextBox Grid.Row="1" Grid.Column="2" Style="{StaticResource TextBoxStyle}" GotKeyboardFocus="TextBox_GotKeyboardFocus" Text="{Binding Path=CurrentRoutine.J1Choreography, UpdateSourceTrigger=LostFocus}"></TextBox>-->
                <TextBox Grid.Row="2" Grid.Column="2" GotKeyboardFocus="TextBox_GotKeyboardFocus">
                    <TextBox.Text>
                        <Binding Path="CurrentRoutine.J1Choreography" UpdateSourceTrigger="LostFocus">
                            <Binding.ValidationRules>
                                <validators:MaxValueValidationRule
                                    MaxValue="25"
                                    ErrorMessage="Max is 25!" />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <!--<TextBox Grid.Row="1" Grid.Column="3" Style="{StaticResource TextBoxStyle}" GotKeyboardFocus="TextBox_GotKeyboardFocus" Text="{Binding Path=CurrentRoutine.J1Execution, UpdateSourceTrigger=LostFocus}"></TextBox>-->
